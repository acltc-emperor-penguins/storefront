<% if @product && @product.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
 
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

    <section>
      <div class="row">
        <div class="col-sm-9">
          <div class="taco_single">
            <h1>Create a new recipe:</h1>

            <%= form_tag '/products', method: :post do %>

            <div>
              <%= label_tag :name %>
              <%= text_field_tag :name, @product.name %>
            </div>
            <div>
              <%= label_tag :price %>
              <%= text_field_tag :price, @product.price %>
            </div>
            <div>
              <%= label_tag :image %>
              <%= text_field_tag :image, @product.image %>
            </div>
            <div>
              <%= label_tag :description %>
              <%= text_field_tag :description, @product.description %>
            </div>
            <div>
              <%= label_tag :rating %>
              <%= text_field_tag :rating, @product.rating %>
            </div>
            <%= submit_tag "Add Taco" %>
            <% end %>
          </div>
        </div>
      </div>
    </section>
