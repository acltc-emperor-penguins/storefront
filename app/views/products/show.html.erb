  <section>
    <div class="row">    
      <div class="col-sm-9">
        <div class="taco_single">
            <h2><%= @taco.name %></h2>
            <p>Price: <%= @taco.price %></p>
            <p>Brought to you by: <%= @taco.supplier.name %></p>
            <img src="<%= @taco.image %>" alt="<%= @taco.name %>" class="img-responsive">
            <p>Description: <%= @taco.description %></p>
            <p>Rating: <span class="rating"><%= @taco.rating %></span></p>
            <%= link_to "Edit", "/products/#{@taco.id}/edit", class: "btn btn-success" %>
            <%= link_to "Delete", "/products/#{@taco.id}", {method: :delete, class: "btn btn-danger" }%>
        </div>
      </div>
    </div>
  </section>

  <section>
    <%= form_tag "/orders", method: :post do %>
      <div>
        <%= label_tag :quantity %>
        <%= text_field_tag :quantity %>
      </div>
      <div>
        <%= label_tag :product_id, "This number can be found at the end of your current URL" %>
        <%= text_field_tag :product_id %>
      </div>
      <div>
        <%= submit_tag "Buy Now!" %>
      </div>
    <% end %>
  </section>
